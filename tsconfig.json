{
    "compilerOptions": {
        "target": "es2015",
        "module": "CommonJS",
        "outDir": "./build",
        "lib": [
            "es2015"
        ],
        "baseUrl": "src",
        "paths": {
            "~controller/*": [
                "controller/*"
            ],
            "~interface/*": [
                "interface/*"
            ],
            "~util/*": [
                "util/*"
            ],
            "~error/*": [
                "util/error/*"
            ]
        },
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
