{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./build",
        "lib": [
            "ESNext"
        ],
        "baseUrl": "./src",
        "paths": {
            "~config": [
                "config"
            ],
            "~controller/*": [
                "controller/*"
            ],
            "~interface/*": [
                "interface/*"
            ],
            "~util/*": [
                "util/*"
            ],
            "~error/*": [
                "util/error/*"
            ]
        },
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
